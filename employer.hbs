<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/assets/css/styles.css" />
  <link rel="stylesheet" href="/assets/css/employer.css" />
  <script src="/assets/js/script.js" defer></script>
  <script src="/assets/js/language.js" defer></script>
  <script src="/assets/js/employer.js" defer></script>
</head>

<body>
  <header>
    <h1 class="mainTitle">{{appName}}</h1>
    <nav class="navbar">
      <ul class="nav-links">
        {{#each navLinks}}
          <li><a href="{{href}}">{{text}}</a></li>
        {{/each}}
      </ul>
    </nav>
  </header>

  <section class="container" id="employer">
    {{#each cards}}
      <div class="card employer-card">
        <h2 id="{{titleId}}">{{title}}</h2>
        {{#each buttons}}
          <a href="{{href}}" class="button" id="{{id}}" title="{{titleAttr}}">{{label}}</a>
        {{/each}}
      </div>
    {{/each}}
  </section>
</body>
</html>
