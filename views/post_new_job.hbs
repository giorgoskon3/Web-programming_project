<header>
    <h1 class="mainTitle">{{appName}}</h1>
    <nav class="navbar">
        <ul class="nav-links">
            {{#each navLinks}}
            <li><a href="{{href}}">{{text}}</a></li>
            {{/each}}
        </ul>
    </nav>
</header>

<div class="container">
    <h1>Post New Job</h1>
    <form id="jobForm" method="post" action="/employer/showPostNewJob/postNewJob">
        <label>Job Title</label>
        <input type="text" name="title" placeholder="Job Title (required)" required><br><br>

        <label>Job Description</label><br>
        <textarea name="description" rows="4" cols="50" placeholder="Job Description (required)" required></textarea><br><br>

        <label>Job Location</label>
        <input type="text" name="location" placeholder="Job Location (required)" required><br><br>

        <label>Salary Range (Optional)</label>
        <input type="text" name="salary_range" placeholder="e.g. 1000-1500"><br><br>

        <label>Job Type (type_id)</label><br>
        <input type="number" name="type_id" required><br><br>

        <input type="hidden" name="work_style" value="On-site">
        <input type="hidden" name="required_skills" value="None">
        <input type="hidden" name="benefits" value="Standard">
        <input type="hidden" name="status" value="Open">
        <input type="hidden" name="user_id" value="1">
        <input type="hidden" name="company_id" value="1">

        <button type="submit">Post Job</button>
        <button type="reset">Reset</button><br><br>
    </form>

</div>