<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Job Search</title>
  <link rel="stylesheet" href="assets/css/job_search.css" />
  <script src="assets/js/job_search.js" defer></script>
</head>

<body>
  <header>
    <h1>Job Search Platform</h1>
  </header>

  <section class="filter-section">
    <form id="filterForm">
      <label for="jobTitle">Job Title</label>
      <input type="text" id="jobTitle" placeholder="e.g. Software Engineer" />

      <label for="location">Location</label>
      <input type="text" id="location" placeholder="e.g. Athens" />

      <label for="type">Job Type</label>
      <select id="type">
        <option value="">All Types</option>
        {{#each jobTypes}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>

      <label for="level">Level</label>
      <select id="level">
        <option value="">All Levels</option>
        {{#each jobLevels}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>

      <label for="workStyle">Work Style</label>
      <select id="workStyle">
        <option value="">All Work Styles</option>
        {{#each workStyles}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>

      <button type="submit">Filter</button>
    </form>
  </section>

  <section id="jobList" class="job-list">
    {{#each jobs}}
      <article class="job-posting">
        <h2>{{title}}</h2>
        <p>{{location}} - {{type}} - {{level}} - {{workStyle}}</p>
      </article>
    {{/each}}
  </section>
</body>

</html>
