<header>
  <h1 class="mainTitle">{{appName}}</h1>
  <nav class="navbar">
    <ul class="nav-links">
      {{#each navLinks}}
      <li><a href="{{href}}">{{text}}</a></li>
      {{/each}}
    </ul>
  </nav>
</header>

<section class="container" id="employer">
  {{#each cards}}
  <div class="card employer-card">
    <h2 id="{{titleId}}">{{title}}</h2>
    {{#each buttons}}
    <a href="{{href}}" class="button" id="{{id}}" title="{{titleAttr}}">{{label}}</a>
    {{/each}}
  </div>
  {{/each}}
</section>