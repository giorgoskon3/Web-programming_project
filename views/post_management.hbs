<header>
  <h1 class="mainTitle">{{appName}}</h1>
  <nav class="navbar">
    <ul class="nav-links">
      {{#each navLinks}}
      <li><a href="{{href}}">{{text}}</a></li>
      {{/each}}
    </ul>
  </nav>
</header>

<div class="jobs-container">
  <h1>Posted Jobs</h1>

  <form method="GET" action="/employer/postManagement" class="filter-container">
    <input type="text" name="title" placeholder="Job Title" value="{{query.title}}">
    <input type="text" name="location" placeholder="Location" value="{{query.location}}">

    <select name="type_id">
      <option value="">All Types</option>
      {{#each types}}
      <option value="{{this.type_id}}" {{#ifEquals ../query.type_id this.type_id}}selected{{/ifEquals}}>
        {{this.type_name}}
      </option>
      {{/each}}
    </select>
{{!-- 
    <select name="work_style" multiple>
      <option value="">Work Style</option>
      {{#each work_style}}
      <option value="{{this.work_style}}" {{#ifEquals ../query.work_style this.work_style}}selected{{/ifEquals}}>
        {{this}}
      </option>
      {{/each}}
    </select> --}}

    <button type="submit">Filter</button>
  </form>

  <br>
  <h2>Βρέθηκαν {{jobs.length}} αγγελίες</h2>
  <br>
  {{#each jobs}}
  <div class="job-card">
    <div class="job-info">
      <h2>{{title}}</h2>
      <p><strong>Company:</strong> {{company_name}}</p>
      <p><strong>Description:</strong> {{description}}</p>
      <p><strong>Location:</strong> {{location}}</p>
      <p><strong>Job Type:</strong> {{type_name}}</p>
      <p><strong>Work Style:</strong> {{work_style}}</p>
      <p><strong>Date Posted:</strong> {{postedDate}}</p>
      <p><strong>Status:</strong> {{status}}</p>
    </div>
    <div class="job-actions">
      <form method="POST" action="/employer/postManagement/deleteJob/{{job_id}}"
        onsubmit="return confirm('Are you sure you want to delete this job?');">
        <a href="/employer/postManagement/editJob/{{job_id}}" class="edit-btn">Edit</a>
        <button type="submit" class="delete-btn">Delete</button>
      </form>
    </div>
  </div>
  {{else}}
  <p>No jobs found</p>
  {{/each}}
</div>